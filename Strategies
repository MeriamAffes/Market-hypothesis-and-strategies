TWAP_Time=[]
for i  in range(10,16):
    for j in range(0,56,5):
        if j==0 or j == 5 :
            time = str(i)+':0'+str(j)+':00'
        else :
            time = str(i)+':'+str(j)+':00'
        TWAP_Time.append(time)
